<h1>Listing rigs</h1>

<table>
  <tr>
    <th>Station</th>
    <th>Letter</th>
    <th>Rig number</th>
    <th>Label</th>
    <th>Transmit frequency</th>
    <th>Receive frequency</th>
    <th>Mode</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @rigs.each do |rig| %>
  <tr>
    <td><%= rig.station %></td>
    <td><%= rig.letter %></td>
    <td><%= rig.rig_number %></td>
    <td><%= rig.label %></td>
    <td><%= rig.transmit_frequency %></td>
    <td><%= rig.receive_frequency %></td>
    <td><%= rig.mode %></td>
    <td><%= link_to 'Show', rig %></td>
    <td><%= link_to 'Edit', edit_rig_path(rig) %></td>
    <td><%= link_to 'Destroy', rig, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

